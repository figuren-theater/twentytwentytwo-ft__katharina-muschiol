{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"customTemplates": [
		{
			"name": "blank",
			"postTypes": [
				"page",
				"post"
			],
			"title": "Blank"
		},
		{
			"name": "blank-w-footer",
			"postTypes": [
				"page",
				"post"
			],
			"title": "Blank mit Footer"
		},
		{
			"name": "single-ft_production",
			"postTypes": [
				"ft_production"
			],
			"title": "Produktion (Einzelansicht)"
		},
		{
			"name": "archive-ft_production",
			"postTypes": [
				"ft_production"
			],
			"title": "Produktionen (Archiv)"
		},
		{
			"name": "single-no-separators",
			"postTypes": [
				"post"
			],
			"title": "Beitrag (Ohne Trenner)"
		},
		{
			"name": "page-no-separators",
			"postTypes": [
				"page"
			],
			"title": "Seite (Ohne Trenner)"
		},
		{
			"name": "page-large-header",
			"postTypes": [
				"page"
			],
			"title": "Seite (Großer Kopfteil)"
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultPalette": true,
			"duotone": [
				{
					"colors": [
						"#000000",
						"#ffffff"
					],
					"name": "Foreground and background",
					"slug": "foreground-and-background"
				}
			],
			"gradients": [],
			"palette": [
				{
					"color": "#000000",
					"name": "Foreground",
					"slug": "foreground"
				},
				{
					"color": "#ffffff",
					"name": "Background",
					"slug": "background"
				}
			]
		},
		"custom": {
			"spacing": {
				"large": "clamp(4rem, 10vw, 8rem)",
				"medium": "clamp(2rem, 8vw, calc(4 * var(--wp--style--block-gap)))",
				"outer": "var(--wp--custom--spacing--small, 1.25rem)",
				"small": "max(1.25rem, 5vw)"
			},
			"typography": {
				"font-size": {
					"colossal": "clamp(3.25rem, 8vw, 6.25rem)",
					"gigantic": "clamp(2.75rem, 6vw, 3.25rem)",
					"huge": "clamp(2.25rem, 4vw, 2.75rem)"
				},
				"line-height": {
					"medium": 1.4,
					"normal": 1.6,
					"small": 1.2,
					"tiny": 1.15
				}
			}
		},
		"layout": {
			"contentSize": "850px",
			"wideSize": "1100px"
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "\"Helvetica Neue\", sans-serif",
					"name": "Sans Serif",
					"slug": "sans-serif"
				}
			],
			"fontSizes": [
				{
					"size": "1rem",
					"slug": "small"
				},
				{
					"size": "1.125rem",
					"slug": "medium"
				},
				{
					"size": "1.75rem",
					"slug": "large"
				},
				{
					"size": "clamp(1.75rem, 3vw, 2.25rem)",
					"slug": "x-large"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "0"
				},
				"color": {
					"background": "var:preset|color|foreground",
					"text": "var:preset|color|background"
				},
				"typography": {
					"fontFamily": "var:preset|font-family|system-font",
					"fontSize": "var:preset|font-size|medium"
				}
			},
			"core/heading": {
				"elements": {
					"text": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--system-font)",
							"textDecoration": "none"
						}
					},
					"link": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--system-font)",
							"textDecoration": "none"
						}
					}
				}
			},
			"core/post-comments": {
				"spacing": {
					"padding": {
						"top": "var(--wp--custom--spacing--small)"
					}
				}
			},
			"core/post-date": {
				"color": {
					"text": "var:preset|color|cyan-bluish-gray"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var:preset|color|cyan-bluish-gray"
						}
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontSize": "var(--wp--custom--typography--font-size--gigantic)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			},
			"core/pullquote": {
				"border": {
					"width": "1px 0"
				}
			},
			"core/query-title": {
				"color": {
					"text": "var:preset|color|cyan-bluish-gray"
				},
				"spacing": {
					"margin": {
						"bottom": "10rem",
						"top": "5rem"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontSize": "var(--wp--custom--typography--font-size--colossal)",
					"fontWeight": "300",
					"letterSpacing": "3px",
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				}
			},
			"core/quote": {
				"border": {
					"width": "1px"
				}
			},
			"core/site-title": {
				"elements": {
					"h1": {
						"typography": {
							"fontSize": "var(--wp--custom--typography--font-size--colossal)"
						}
					},
					"link": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--system-font)",
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"textDecoration": "none"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontSize": "var(--wp--custom--typography--font-size--colossal)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontSize": "var(--wp--custom--typography--font-size--gigantic)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontSize": "var(--wp--custom--typography--font-size--huge)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "700",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"textTransform": "uppercase"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "400",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"textTransform": "uppercase"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--foreground)"
				}
			}
		},
		"spacing": {
			"blockGap": "2.5rem"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "header",
			"name": "header-large-dark",
			"title": "Header (dunkel, groß)"
		},
		{
			"area": "header",
			"name": "header-small-dark",
			"title": "Header (dunkel, klein)"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	],
	"version": 2
}